@model List<string>

<div class="d-flex justify-content-center text-center">
    <div class="row">
        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="my-card my-card-first">
                <div class="card-city">
                    <i class='bx bx-current-location mr-2'></i>
                    <p>@Model[2]</p>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <i class="fas fa-thermometer-empty card-icon"></i>
                    <span>@Model[3]</span><sup class="temp-sup"><i class="fas fa-dot-circle"></i></sup>C
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="my-card">
                <i class='bx bx-wind card-icon'></i>
                <span>@Model[4] m/s</span>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="my-card">
                <i class='bx bxs-book-content card-icon'></i>
                <span>@Model[0]</span>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 col-sm-12">
            <div class="my-card">
                <i class='bx bxs-category card-icon'></i>
                <span>@Model[1]</span>
            </div>
        </div>
    </div>
</div>
