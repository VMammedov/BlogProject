@model Message

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterPanelLayout.cshtml";
}

<style>
    .msg-pp-img{
        width:60px;
        height:60px;
        border-radius:50%;
    }
</style>

<div class="p-5">
    <div class="bg-light p-4" style="border-radius:12px">
        <div class="row">
            <div class="col-md-12">
                <div class="mail-card" style="border-radius:12px">
                    <div class="card-body bg-custom text-white mailbox-widget pb-0" style="border-start-start-radius:12px; border-start-end-radius:12px;">
                        <h2 class="text-white pb-3">Message - @Model.Subject Details</h2>
                        <ul class="nav nav-tabs mail-custom-tab border-bottom-0 mt-4" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link custom-mail-nav-button active" href="" id="inbox-tab">
                                    <span class="d-block d-md-none"><i class="ti-email"></i></span>
                                    <span class="d-none d-md-block"> INBOX</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-mail-nav-button" href="" id="sent-tab">
                                    <span class="d-block d-md-none"><i class="ti-export"></i></span>
                                    <span class="d-none d-md-block">SENT</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-mail-nav-button" href="" id="spam-tab">
                                    <span class="d-block d-md-none"><i class="ti-panel"></i></span>
                                    <span class="d-none d-md-block">SPAM</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-mail-nav-button" href="" id="delete-tab">
                                    <span class="d-block d-md-none"><i class="ti-trash"></i></span>
                                    <span class="d-none d-md-block">DELETED</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade active show" id="inbox" aria-labelledby="inbox-tab" role="tabpanel">
                            <div>
                                <!-- Mail Details-->
                                <div class="container pt-5 pb-5">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <img class="msg-pp-img" src="https://img.search.brave.com/LzY1En6Rjk3awuUxGSprcBH8aH3dTxbwHeE0lFwr_nI/rs:fit:1200:1200:1/g:ce/aHR0cHM6Ly9hc2lh/Lm9seW1wdXMtaW1h/Z2luZy5jb20vY29u/dGVudC8wMDAwOTAw/MzMuanBn" alt="Profile Image" />
                                                <div class="ml-4">
                                                    <h4>@Model.Sender.WriterNickName</h4>
                                                    <p>@Model.Sender.WriterMail</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h4 class="font-light mb-2" style="font-size:1.4rem;">Subject: @Model.Subject</h4>
                                                    <h5 class="font-light">To : @Model.Receiver.WriterMail</h5>
                                                </div>
                                                <div>
                                                    <h6><i class="fas fa-history"></i> @Model.MessageDate.ToString("dddd-MMMM-yyyy")</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="p-3">
                                        <p class="text-dark font-light" style="font-size:1.1rem;">
                                            @Model.MessageContent
                                        </p>
                                    </div>
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

