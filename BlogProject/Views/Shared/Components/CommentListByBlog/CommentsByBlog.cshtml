@model List<Comment>

<div id="comments" class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count == 0)
    {
        <div class="media" id="empty-comment-cont">
            <div class="container">
                <h5 class="text-muted">Be the first to comment</h5>
            </div>
        </div>
    }
    else
    {
        @foreach (Comment comment in Model)
        {
            <div class="media">
                <img src="~/WriterImageFiles/@comment.User.UserImage" class="comment-img" />
                <div class="media-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mt-0">@comment.User.UserName</h5>
                        <span class="text-muted ml-3 font-weight-bold" style="font-size:12px"><i class='fas fa-calendar-times'></i> @comment.CommentDate.ToString("dd-MMM-yyyy")</span>
                    </div>
                    <p>
                        @comment.CommentContent
                    </p>
                </div>
            </div>
        }
    }

</div>
