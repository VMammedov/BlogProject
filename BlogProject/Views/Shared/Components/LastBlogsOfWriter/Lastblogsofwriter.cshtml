@model List<Blog>

<div class="tech-btm">
    <h4 class="text-secondary">Last Blogs of Writer</h4>

    @foreach (Blog item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="single.html">
                    <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="" class="text-secondary">@item.BlogTitle </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>
    }
</div>